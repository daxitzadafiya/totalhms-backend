<script>
jQuery(document).ready(function($){
$('.update').on('click',function(){
    var id=$(this).data('id');
    console.log(id);

    $("#xid").val(id);
});

$(document).on('change','.depart', function() {
  var id=$(this).val();
  $(".roles").val("");

  if(id !=null){
    $.ajax({
                        headers: {
                            'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
                        },
                        type: 'POST',
                        url: '{{ url("/get/roles") }}',
                        data: {'id':id},

                    }).done(function(data) {
                      //console.log(data);
                        if (data.success === true) {
                            $('.preloader').hide();
                            $(".roles").attr("disabled",false);
                                $(".roles").html(data.option);
                        } else {
                            $('.preloader').hide();
                            $(".roles").attr("disabled",true);

                        }
                    });
      
  }
});

        //edit for documents uploads
        $(".docedt").on("click", function() {
            var id = $(this).data('id');
            var filename = $(this).data('filename');
            //console.log(filename);
            var category = $(this).data('category');

            $('#docid').val(id);
            $('#filename').val(filename);
            $('#category').val(category).change();
           
            
        });
        //deleting the documents
        $('.delete_doc').on('click',function(e){
            e.preventDefault();
            var id = $(this).data('id');
            console.log('Ajay' + id);

            var table = $(this).data('table');
            if (id != "") {

                swal({
                    title: "Advarsel",
                    text: "Are you sure want to delet!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Ja, Save!",
                    cancelButtonText: "Avbryt",
                }).then(result => {
                    // swal("Slettet!", "Sletting utf√∏rt.", "success");
                    $('.preloader').show();

                    if (result.value) {
                        $.ajax({
                            headers: {
                                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
                            },
                            type: 'POST',
                            url: '{{ url("/delete/document") }}',
                            data: {
                                'id': id,
                                
                            },

                        }).done(function(msg) {
                            if (msg == 0) {
                                $('.preloader').hide();
                                    swal("Deleted!", " ", "success").then(function() {
                                        location.reload();

                                });
                            } else {
                                $('.preloader').hide();
                                swal("error !", " ", "error").then(function() {
                                   //  location.reload();
                                });
                            }
                        });

                    } else if (
                        // Read more about handling dismissals
                        result.dismiss === swal.DismissReason.cancel
                    ) {
                        swal("Avbrutt", "Ingen ting ble slettet!", "error");
                    }
                    $('.preloader').hide();

                    swal.closeModal();
                });

            }


        });

   



});
       
